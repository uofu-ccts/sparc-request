#!/usr/bin/env ruby
#
# This file was generated by Bundler.
#
# The application 'rspec' is installed as part of a gem, and
# this file is here to facilitate running it.
#

require 'pathname'
ENV['BUNDLE_GEMFILE'] ||= File.expand_path("../../Gemfile",
  Pathname.new(__FILE__).realpath)

require 'rubygems'
require 'bundler/setup'

require 'yaml'

require 'colorize'

def usage
  puts "bin/check-config <ENV>"
  abort
end

usage unless ARGV[0]

application_config = YAML.load_file('config/application.yml')[ARGV[0]]

example_config = YAML.load_file('config/application.yml.example')[ARGV[0]]


application_config_keys = application_config.keys

example_config_keys = example_config.keys

example_config_keys.each do |key|
  next if application_config_keys.include? key
  puts "#{key}: #{example_config[key]}"
end
