#!/usr/bin/env ruby
require 'parallel'
require 'open3'
require 'colorize'
folders = ['models','controllers','extensions', 'lib', 'api', 'mailers', 'jobs', 'helpers']
folders.each do |folder|
  cmd = "RAILS_ENV=test bundle exec rspec spec/#{folder}"
  puts cmd.green
  Open3.popen3(cmd) do |stdout, stderr, status, thread|
    while line=stderr.gets do
      puts(line.yellow)
    end

  end
end
