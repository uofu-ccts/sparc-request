require 'rest-client'


def prompt(message)
  puts message
  gets.chomp
end

def post(url, params)
  RestClient.post(url, params, content_type: 'application/json') { |response, request, result, &block|
    puts response
  }
end

username = prompt("Please enter username:")

password = prompt("Please enter password:")

host = prompt("please enter host:")

path = "/v1/notifications.json"

protocol = "https"
url = [protocol, '://', username, ':', password, '@', host, path].join

puts url
